syntax on
filetype plugin indent on

set autoindent
set background=dark
set diffopt+=iwhite
set expandtab
set hlsearch
set gdefault
set guioptions-=T       " Turn off useless toolbar
set guioptions-=m       " Turn off useless toolbar
set incsearch
set ignorecase
set laststatus=2        " Always want statusline
set lazyredraw          " Don't display macro steps
set linebreak
set mouse=a
set nobackup
set noswapfile
set nowritebackup
set nowrap
set ruler
set shiftwidth=4
set smartindent
set smarttab
set softtabstop=4
set tabstop=4
set viminfo+=%
set wildmenu
set wildmode=list:longest,full
